<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alisonjc.buzzerbutler.fragments.ProfileFragment"
    android:weightSum="100">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/buzzer_butler_165"
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:layout_weight="30"
            android:layout_gravity="center"/>

    <TextView
        android:text="@string/your_user_profile"
        android:id="@+id/appNameText"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="70"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text=" NAME"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/color_default"/>

        <TextView
            android:id="@+id/profile_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="PHONE NUMBER"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/color_default"/>

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="EMAIL"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/color_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="PROMPT: "
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/color_default"/>

            <TextView
                android:id="@+id/profile_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/color_default"/>

        </LinearLayout>


        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="50dp">

           <TextView
               android:text="Your Address:\n5555 Apartment Way"
               android:id="@+id/addressText"
               android:textAlignment="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

        </LinearLayout>


        <Button
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Manage Users"
            android:id="@+id/manageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

</LinearLayout>
